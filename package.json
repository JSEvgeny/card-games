{
  "name": "cards",
  "version": "0.0.1",
  "description": "Durak card game implementation. more to come possibly",
  "main": "dist/server.js",
  "type": "commonjs",
  "scripts": {
    "build-server": "tsc",
    "build-client": "webpack",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript, Node\" -c \"yello.bold, cyan.bold\" \"npm run watch-ts\" \"npm run watch-node\" \"npm run build-client\" ",
    "test": "mocha -r ts-node/register src/**/*.spec.ts"
  },
  "author": "Evgeny Riklund",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "concurrently": "^7.2.2",
    "nodemon": "^2.0.18",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "express": "^4.18.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
